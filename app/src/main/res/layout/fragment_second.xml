<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zed.example.gui.ShapeLayer
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_dp_14"
        app:centerColor="@color/color_edeaeb"
        app:endColor="@color/transparent"
        app:mShadowWidth="@dimen/dimen_dp_10"
        app:shapeBackground="@color/color_ffffff"
        app:startColor="@color/color_ff4979">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_19"
                android:layout_marginTop="@dimen/dimen_dp_17"
                android:text="我的账户"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_sp_17" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_19"
                android:layout_marginTop="@dimen/dimen_dp_17"
                android:text="我的账户"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_sp_17" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_19"
                android:layout_marginTop="@dimen/dimen_dp_17"
                android:text="我的账户"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_sp_17" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_dp_17"
                android:layout_marginLeft="@dimen/dimen_dp_19"
                android:layout_marginTop="@dimen/dimen_dp_17"
                android:text="我的账户"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_sp_17" />
        </LinearLayout>
    </com.zed.example.gui.ShapeLayer>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_19"
            android:text="组件边距:5"
            android:textSize="@dimen/dimen_sp_17" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skSize3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_19"
            android:text="阴影大小:5"
            android:textSize="@dimen/dimen_sp_17" />

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skSize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_19"
            android:text="偏移量X:5"
            android:textSize="@dimen/dimen_sp_17" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="150"
            android:min="0"
            android:progress="55" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skSize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_19"
            android:text="偏移量Y:5"
            android:textSize="@dimen/dimen_sp_17" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="150"
            android:min="0"
            android:progress="55" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_45"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/r"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_4c4c4c"
            android:checked="true"
            android:text="圆角" />

        <RadioButton
            android:id="@+id/z"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_ff4979"
            android:text="直角" />
    </RadioGroup>

    <Button
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="换个颜色" />
</LinearLayout>
